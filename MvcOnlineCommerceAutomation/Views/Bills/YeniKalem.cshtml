@model MvcOnlineCommerceAutomation.Models.Classes.InvoiceAdditions
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Kalem Sayfası</h2>
<br />
<form class="form-group" method="post">

    @Html.LabelFor(x => x.InvoiceDescription)
    @Html.TextBoxFor(x => x.InvoiceDescription, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoiceAmount)
    @Html.TextBoxFor(x => x.InvoiceAmount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoiceUnitPrice)
    @Html.TextBoxFor(x => x.InvoiceUnitPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoiceTotalPrice)
    @Html.TextBoxFor(x => x.InvoiceTotalPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BillId)
    @Html.TextBoxFor(x => x.BillId, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Kaydet</button>


</form>



