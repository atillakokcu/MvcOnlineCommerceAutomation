@model MvcOnlineCommerceAutomation.Models.Classes.Category
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme</h2>
<br />
@using (Html.BeginForm("KategoriGuncelle", "Category", FormMethod.Post))
{

<div class="form-group">
    @Html.LabelFor(x=>x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName,new  { @class="form-control"})
    @Html.HiddenFor(x=>x.CategoryId)


</div>

<button class="btn btn-warning">Güncelle</button>

}


