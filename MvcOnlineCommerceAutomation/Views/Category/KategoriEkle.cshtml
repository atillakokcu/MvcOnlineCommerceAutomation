@model MvcOnlineCommerceAutomation.Models.Classes.Category
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.6.3.js"></script>
<br />
<h2>Yeni Kategori Sayfaası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new {@class="form-control"})
    <br />
    <button class="btn btn-info" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function () {
            alert("Kategori başarılı bir şekilde ekledi.")
        })
    </script>

</form>
