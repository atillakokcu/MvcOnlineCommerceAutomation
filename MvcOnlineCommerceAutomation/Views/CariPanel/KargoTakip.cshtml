@using MvcOnlineCommerceAutomation.Models.Classes
@model  List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>KargoTakip</h2>

<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <td>Personel</td>
        <td>Alıcı</td>
        <td>Tarih</td>
        <td>Detaylar</td>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personel</td>
            <td> @k.Alici</td>
            <td> @k.Tarih</td>
            <td><a href="/CariPanel/CariKargoTakip/@k.TakipKodu" class="btn btn-default" style="background-color:aquamarine;color:black">Detaylar</a></td>
        </tr>
    }

</table>



